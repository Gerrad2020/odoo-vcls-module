<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="s_vcls_form_builder" name="Vcls formbuilder">
        <section class="s_vcls_form_builder pt96 pb96">

            <div class="container">
                <div class="row">
                    <div class="oe_structure oe_empty col oe_structure oe_empty">
                        <section class="s_text_image pt32 pb32">
                            <div class="container">
                                <div class="row align-items-center">
                                    <div class="col-lg-6 pt16 pb16">
                                        <h2>A Section Subtitle</h2>
                                        <p>Write one or two paragraphs describing your product or services. <br/>To be successful your content needs to be useful to your readers.</p>
                                        <p>Start with the customer – find out what they want and give it to them.</p>
                                        <div class="s_btn text-left pt16 pb16" data-name="Buttons">
                                            <a href="#" class="btn btn-primary">Learn more</a>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 pt16 pb16">
                                        <img src="/web/image/website.s_text_image_default_image" class="img img-fluid mx-auto" alt="Odoo • Text and Image"/>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="col">
                        <form action="/website_form/" method="post" class="s_website_form container-fluid mt32" enctype="multipart/form-data">
                            <div class="container">
                                <div class="form-group row">
                                    <div class="offset-lg-3 offset-md-4 col-md-8 col-lg-7">
                                        <button class="btn btn-primary btn-lg o_website_form_send">Send</button>
                                        <span id="o_website_form_result"></span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <template id="snippets" inherit_id="website.snippets" priority="20">
        <xpath expr="//div[@id='snippet_structure']" position="before">
            <div id="snippet_vcls" class="o_panel">
                <div class="o_panel_header">
                    <i class="fa  fa-shower"/>
                    VCLS
                </div>
                <div class="o_panel_body">
                    <t t-snippet="vcls-webdesign.s_vcls_form_builder" t-thumbnail="/website_enterprise/static/src/img/s_website_form.png"/>
                </div>
            </div>
        </xpath>
    </template>

</odoo>
